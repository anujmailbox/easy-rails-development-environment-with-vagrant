<%= form_for contact do |f| %>
  <div class="row">
    <div class="form-group col-sm-6">
      <%= f.label :first_name, class: 'control-label' %>
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>

    <div class="form-group col-sm-6">
      <%= f.label :last_name, class: 'control-label' %>
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :street_address, class: 'control-label' %>
    <%= f.text_field :street_address, class: 'form-control' %>
  </div>

  <div class="row">
    <div class="form-group col-sm-2">
      <%= f.label :country_code, class: 'control-label' %>
      <%= f.text_field :country_code, class: 'form-control' %>
    </div>

    <div class="form-group col-sm-2">
      <%= f.label :zip_code, class: 'control-label' %>
      <%= f.text_field :zip_code, class: 'form-control' %>
    </div>

    <div class="form-group col-sm-8">
      <%= f.label :city, class: 'control-label' %>
      <%= f.text_field :city, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-sm-4">
      <%= f.label :phone_number, class: 'control-label' %>
      <%= f.text_field :phone_number, class: 'form-control' %>
    </div>

    <div class="form-group col-sm-4">
      <%= f.label :email, class: 'control-label' %>
      <%= f.text_field :email, class: 'form-control' %>
    </div>

    <div class="form-group col-sm-4">
      <%= f.label :twitter, class: 'control-label' %>
      <%= f.text_field :twitter, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :avatar_url, class: 'control-label' %>
    <%= f.url_field :avatar_url, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "#{contact.new_record? ? 'Create' : 'Save'} Contact", class: 'btn btn-success' %>
    <%= link_to 'Back to Contacts', contacts_path, class: 'btn btn-default' %>
  </div>
<% end %>
